# Server Configuration
PORT=3000
NODE_ENV=development

# Database - Supabase PostgreSQL
# Get from: https://supabase.com/dashboard/project/_/settings/database
DATABASE_URL="postgresql://postgres.[PROJECT_REF]:[PASSWORD]@aws-1-us-east-2.pooler.supabase.com:5432/postgres"
DIRECT_URL="postgresql://postgres.[PROJECT_REF]:[PASSWORD]@aws-1-us-east-2.compute-1.amazonaws.com:5432/postgres"

# Blockchain - Sepolia Testnet
SEPOLIA_RPC_URL="https://ethereum-sepolia-rpc.publicnode.com"
# IMPORTANT: Get your private key from MetaMask (Account Details > Export Private Key)
# NEVER commit your real private key to version control!
PRIVATE_KEY="your_private_key_here_without_0x_prefix"
CHAIN_ID="11155111"

# Smart Contract Addresses (Already deployed on Sepolia)
PRODUCT_REGISTRY_ADDRESS="0xe0c52095175ba416b886D1Bda6A4F71F1958c8b2"
PAYMENT_ESCROW_ADDRESS="0x416133e08B0cC8804bf5A00f0e3569D4A378EB63"

# Frontend URL (for CORS)
FRONTEND_URL="http://localhost:3001"

# JWT Secret - Generate with: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
# IMPORTANT: Use a different secret for production!
JWT_SECRET="your_super_secret_jwt_key_replace_with_64_char_random_string"

# Optional: Error Tracking
# SENTRY_DSN="https://your-sentry-dsn@sentry.io/project-id"

# Optional: Logging
LOG_LEVEL="info"  # Options: error, warn, info, debug
